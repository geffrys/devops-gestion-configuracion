pipeline {
    agent any

    environment {
        TOMCAT_HOME = '/var/lib/tomcat8'
    }

    tools {
        maven 'Maven'
    }
    
    stages {
        
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'mvn clean package'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying..'
                sh 'cp target/*.war ${TOMCAT_HOME}'
                sh 'sudo systemctl restart tomcat8'
            }
        }
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Success!'
        }
        failure {
        }
        unstable {
        }
        changed {
        }
    }
}
